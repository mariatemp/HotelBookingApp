@model HotelBookingApp.DTO.AccommodationDTO

@{
    ViewBag.Title = "Accommodation Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Accommodation Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Location</dt>
        <dd>@Model.Location</dd>
        <dt>City</dt>
        <dd>@Model.City</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricePerNight)
        </dt>
        <dd class="col-sm-10">
            @Model.PricePerNight
        </dd>
        <dt>Available From</dt>
        <dd>@Model.AvailableFrom.ToShortDateString()</dd>
        <dt>Available To</dt>
        <dd>@Model.AvailableTo.ToShortDateString()</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AccommodationId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-controller="Accommodation" asp-action="Book" asp-route-id="@Model.AccommodationId">Book Now</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

