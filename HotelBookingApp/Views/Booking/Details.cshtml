@model HotelBookingApp.DTO.BookingDTO

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Booking ID
        </dt>
        <dd class="col-sm-10">
            @Model.BookingId
        </dd>
        <dt class="col-sm-2">
            Accommodation ID
        </dt>
        <dd class="col-sm-10">
            @Model.AccommodationId
        </dd>
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            Firstname
        </dt>
        <dd class="col-sm-10">
            @Model.Firstname
        </dd>
        <dt class="col-sm-2">
            Lastname
        </dt>
        <dd class="col-sm-10">
            @Model.Lastname
        </dd>
        <dt class="col-sm-2">
            Number of Guests
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfGuests
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice
        </dd>
    </dl>
</div>

<div>
    <h4>Accommodation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Accommodation.Description
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Accommodation.Location
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.Accommodation.City
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Accommodation.Address
        </dd>
        <dt class="col-sm-2">
            Price Per Night
        </dt>
        <dd class="col-sm-10">
            @Model.Accommodation.PricePerNight
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
